<BorderPane fx:id="groupBorderPaneContainer" prefHeight="480.0" prefWidth="917.0" style="-fx-background-color: dedede;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tap.schoolplatform.controllers.user.UserGroupBorderPaneViewController">
   <left>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" />
         </BorderPane.margin>
         <VBox alignment="TOP_CENTER" prefHeight="470.0" prefWidth="224.0" spacing="10.0" style="-fx-background-color: f6f6f6; -fx-background-radius: 5;">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
            </padding>
            <ImageView fitHeight="119.0" fitWidth="131.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
               <Image url="@../../images/logo-School-Platform.png" />
            </ImageView>
            <Label id="titleOptions" fx:id="groupName" prefHeight="27.0" prefWidth="177.0" text="Options" />
            <Separator prefWidth="200.0">
               <padding>
                  <Insets left="15.0" right="15.0" />
               </padding>
            </Separator>
            <Button id="btnOptions" fx:id="membersButton" alignment="BOTTOM_LEFT" contentDisplay="BOTTOM" mnemonicParsing="false" onAction="#loadMembers" prefHeight="31.0" prefWidth="193.0" text="Members" />
            <Button id="btnOptions" fx:id="assignmentsButton" alignment="BOTTOM_LEFT" contentDisplay="BOTTOM" mnemonicParsing="false" onAction="#loadAssignments" prefHeight="31.0" prefWidth="193.0" text="Assignments" />
            <TextFlow fx:id="groupDescription" prefHeight="170.0" prefWidth="203.0" textAlignment="JUSTIFY">
               <VBox.margin>
                  <Insets left="12.0" right="12.0" />
               </VBox.margin></TextFlow>
            <HBox>
               <children>
                  <Label prefHeight="18.0" prefWidth="26.0" text="ID:" />
                  <Label fx:id="groupID" prefHeight="18.0" prefWidth="183.0" text="ID" />
               </children>
            </HBox>
         </VBox>
      </AnchorPane>
   </left>
   <stylesheets>
      <URL value="@../../styles/buttons.css" />
      <URL value="@../../styles/main.css" />
   </stylesheets>
   <center>
      <AnchorPane prefHeight="476.0" prefWidth="683.0" BorderPane.alignment="CENTER">
         <children>
            <VBox layoutX="14.0" prefHeight="470.0" prefWidth="629.0" style="-fx-background-color: f6f6f6; -fx-background-radius: 5;">
               <padding>
                  <Insets left="10.0" top="10.0" />
               </padding>
               <stylesheets>
                  <URL value="@../../styles/buttons.css" />
                  <URL value="@../../styles/scrollPane.css" />
                  <URL value="@../../styles/main.css" />
               </stylesheets>
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="34.0" prefWidth="590.0" spacing="10.0">
                     <children>
                        <Button fx:id="exitButton" mnemonicParsing="false" onAction="#closeSubmitHomework">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="19.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../images/arrowL.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Label id="titleOptions" fx:id="homeworkTitleLabel" prefHeight="29.0" prefWidth="284.0" text="1.3 Example Title Homework" />
                        <Button id="btnN" fx:id="editButton" mnemonicParsing="false" onAction="#editButtonHandler" prefHeight="30.0" prefWidth="81.0" text="Edit" />
                        <StackPane prefHeight="34.0" prefWidth="87.0">
                           <children>
                              <Button id="btnH" fx:id="gradeButton" mnemonicParsing="false" onAction="#submitHomework" prefHeight="30.0" prefWidth="80.0" text="Grade" />
                              <Button id="btnH" fx:id="submmitButton" mnemonicParsing="false" onAction="#submitHomework" prefHeight="30.0" prefWidth="80.0" text="Submit" visible="false" />
                           </children>
                        </StackPane>
                        <Button id="btnN" fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteAssignment" prefHeight="30.0" prefWidth="81.0" text="Delete" />
                     </children>
                  </HBox>
                  <Separator prefHeight="17.0" prefWidth="570.0">
                     <padding>
                        <Insets right="105.0" />
                     </padding>
                  </Separator>
                  <HBox prefHeight="21.0" prefWidth="487.0" spacing="3.0">
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                     <children>
                        <Label text="Deadline: " />
                        <Label fx:id="deadlineLabel" prefHeight="4.0" prefWidth="105.0" text="09/04/25" />
                        <Label prefHeight="0.0" prefWidth="12.0" text="at" />
                        <Label fx:id="hourLabel" prefHeight="0.0" prefWidth="139.0" text="00:00 PM" />
                     </children>
                  </HBox>
                  <HBox prefHeight="14.0" prefWidth="619.0">
                     <children>
                        <Label id="txtbold" prefHeight="17.0" prefWidth="427.0" text="Instructions: ">
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                        </Label>
                        <Label id="txtbold" fx:id="lbPoints" prefHeight="17.0" prefWidth="87.0" text="10/10 Points">
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                        </Label>
                     </children>
                  </HBox>
                  <ScrollPane fitToWidth="true" prefHeight="286.0" prefWidth="569.0">
                     <VBox.margin>
                        <Insets right="50.0" />
                     </VBox.margin>
                     <content>
                        <TextFlow fx:id="textFlow" prefHeight="241.0" prefWidth="565.0" />
                     </content>
                  </ScrollPane>
                  <Button fx:id="attachButton" mnemonicParsing="false" onAction="#attachFiles" prefHeight="35.0" prefWidth="606.0" style="-fx-text-fill: #709a98; -fx-background-color: dedede;" text="Attach" textFill="#639d9e">
                     <graphic>
                        <ImageView fitHeight="56.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../images/Adjuntar.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
