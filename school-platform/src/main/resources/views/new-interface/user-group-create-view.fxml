   <TextField fx:id="groupNameField"/>
   <Label text="Make a description:"/>
   <TextArea fx:id="descriptionField" prefHeight="151.0" prefWidth="580.0"/>
   <Label text="Choose a color:"/>
   <HBox prefHeight="29.0" prefWidth="600.0" spacing="10.0">
      <ColorPicker fx:id="colorPicker"/>
      <Button id="btnM" fx:id="createButton" mnemonicParsing="false" onAction="#createGroup" text="Create">
         <HBox.margin>
            <Insets left="300.0"/>
         </HBox.margin>
      </Button>
      <Button id="btnN" fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelCreation" text="Cancel"/>
   </HBox>
</VBox>
