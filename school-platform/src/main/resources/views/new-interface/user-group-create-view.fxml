<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
      prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.tap.schoolplatform.controllers.user.UserCreateGroupViewController">
   <stylesheets>
      <URL value="@../../styles/main.css"/>
      <URL value="@../../styles/buttons.css"/>
      <URL value="@../../styles/comboBox.css"/>
   </stylesheets>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
   </padding>
   <Label id="TitleRegister" text="Creation group"/>
   <Separator prefWidth="200.0"/>
